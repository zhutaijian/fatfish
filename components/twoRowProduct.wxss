page{
  background: #f6f6f6;
}
.product-list-style{
  display: flex;
 flex-wrap:wrap;
 
}
.product-list-style .product-item-style1{
   width:47%;
   flex:0 0 47%;
      
   
    margin: 0 0 2% 2%;
   /* flex-wrap: 0 0 50%; */
  
   position: relative;
}
.product-list-style .product-item-style1  .img-wrapper{
   position: relative;
   width: 100%;
   padding-bottom: 140%;
   height:0;
   overflow: hidden;
   background: #fff;
      
}
.product-list-style .product-item-style1 .img-wrapper image{
  position:absolute;
height:65%;
max-height:60%;
max-width:90%;
overflow:hidden;
left:0;
margin:5%;
top:0;

}
.product-list-style .product-item-style1 .img-wrapper .goods-carts{
  width: 20px;
  height: 20px;
  right:0;
  left: inherit;
  max-height: inherit;
  background-color:#fc5879; 
  border-radius: 50%;
  padding: 5rpx;
  margin:0 5% 0 0;
  z-index: 2;
}

.product-list-style .product-item-style1 .goods-info{
   position: absolute; 
   top:65%;
   box-sizing: border-box;
   width: 100%;
   padding: 20rpx;
   font-size: 26rpx;
}
.product-list-style .product-item-style1 .goods-info .title{
  font-size: 28rpx;
  color:#333;
  margin-bottom: 10rpx;
 text-overflow: -o-ellipsis-lastline;
overflow: hidden;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical
  
}
.product-list-style .product-item-style1 .goods-info .price{
    position: relative;
    color:#ff3800;
    margin-bottom: 10rpx;
    font-size: 34rpx;
}
.goods-info .price text{
  display: inline-block;
  padding-right: 2px;
  font-size: 24rpx;
}

.right-buy{
  border: 0;
  background: #ff3241;
  padding: 0;
  height:60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color:#fff;
  width:120rpx;
  text-align: center;
  margin-left: 0;
}