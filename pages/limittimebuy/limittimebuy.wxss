/* pages/limittimebuy/limittimebuy.wxss */

page {
 
  height: 100%;
  position: relative;
}
.limit-buy-banner{
  height:258rpx;
  width:100%;
}
.loading{
  color:#aaa;
  font-size: 28rpx;
  text-align: center;
  position: absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
}
.header {
  text-align: center;
  padding: 20rpx 0;
  color: #aaa;
  font-size: 28rpx;
  background: #fff;
 
  overflow: hidden;
}
.section-header{
  display: flex;

  font-size: 28rpx;
  align-items: center;
  justify-content: center;

}
.section-header .section-item{
  flex:1;
  text-align: center;
  background:#333;
  color:#fff;
  
}
.section-header .section-item text{
  display: block;
  line-height: 50rpx;
  color:#f5f5f5;
}
.section-header .section-item .small-desc{
   font-size: 20rpx;
   line-height: 20rpx;
   padding-bottom:10rpx; 
}
.section-header .section-item.true{
  color:#fff;
  background:#f07d17;

}
.products {
  background: #f9f9f9;
  padding-bottom: 40rpx;
}

.products .product {
  display: flex;
  box-shadow: 10px 10rpx 0rpx 0rpx #f5f5f5, -10px -4rpx 0rpx 0rpx #f5f5f5;
  position: relative;
  width: 100%;
  margin: 15rpx auto;
  background: #fff;
  padding: 20rpx 0;
  font-size: 24rpx;
  background: #fff;
}

.right-info {
  flex: 1;
  padding: 0 20rpx;
}

.products .product .title {
  color: #333;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.product .price i {
  font-size: 24rpx;
}
.product .product-bottom{
  position: relative;
}
.product .limit-count{
 position: absolute;
 top:15rpx;
 left:160rpx;
 color:#aaa;
}
.old-price {
  color: #aaa !important;
  margin-left: 10rpx;
  font-size: 24rpx;
  text-decoration: line-through;
}
.price-desc{
  font-size: 24rpx;
  color:#aaa;
  margin-right: 10rpx;
}
.product .price {
  font-size: 32rpx;
  color: #ff3800;
  margin-bottom: 10rpx;
}

.product .sell-count {
  margin-bottom: 20rpx;
  color: #aaa;
  display: inline-block;
  margin-right: 10rpx;
}

.delay-time {
  color: #333;
  font-weight: 500;
  letter-spacing: 2rpx;
  font-size: 28rpx;
  margin-top: 10rpx;
}
.delay-time text{
  display: inline-block;
   width:50rpx;
   height:50rpx;
   background: #ffae12;
   margin-right: 10rpx;
   line-height: 50rpx;
   color: #fff;
}
.products .product image {
  width: 240rpx;
  height: 240rpx;
  margin-right: 20rpx;
}

.product .right-buy {
  width: 140rpx;
  height: 60rpx;
  line-height: 60rpx;
     background: linear-gradient(to right,#ffae12 0,#f07d17 100%);
  text-align: center;
  border-radius: 4rpx;
  color: #fff;
}

.delay-count {
  display: inline-block;
  vertical-align: middle;
}

.progress-bar {
  background: #f5f5f5;
  width: 120rpx;
  height: 10rpx;
  display: inline-block;
  border-radius: 10rpx;
  position: relative;
  overflow: hidden;
  margin-left: 20rpx;
}

.progress-bar .progress-value {
  background: #ffae12;
  position: absolute;
  left: 0;
  height: 100%;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}
