/* pages/productadd/productadd.wxss */
@import '../successpay/successpay.wxss';
page{
 background: #f5f5f5;
 height:100%;
}
.thumb{
  width:300rpx!important;
  height:300rpx!important;
  display: block;
  margin: 0 auto;
}
.product-add-avatar-wrapper{
   padding: 20px;
   background: #fff;
   vertical-align: center;
   margin-bottom: 10rpx;
   display: flex;
   color:#666;
font-size:28rpx;
align-items: center;
}
.product-add-avatar-wrapper label{
  flex:1;
}
.product-add-avatar-wrapper image{
   width:100rpx;
   height:100rpx;
   display: table-cell;
    border: 1rpx dashed #f5f5f5;
   background-size:contain; 
   

}
.product-add .section{
  display: flex;
  padding: 25rpx 30rpx;
  border-bottom: 1rpx solid #eee;
  align-items: center;
  background: #fff;
}
.product-add .section::first-child{
  border-top: 1rpx solid #eee;
}
.product-add .section:last-child{
  border-bottom: 0!important;
}
.product-add .section label{
  width:200rpx;
  color:#666;
  font-size: 28rpx;
  text-align: left;
}
.product-add .section input,.product-add .section picker,.section  textarea{
  flex:1;
  text-align: right;
    font-size: 28rpx;
}
.icon-scan{
 width: 40rpx;
  height:40rpx;
  vertical-align: middle;
  float: right;
  
  
}
.right-scan{
  flex:1;
  text-align:right;
}
.product-add .icon-right-arrow{
  width: 30rpx;
  height:30rpx;
  vertical-align: middle;
}
.save-product{
  margin-top: 50rpx;
  width:90%;
  padding:0 5%;

}
.product-add {
  display: flex;
  flex-direction: column;
  height:100%;
}
.product-add .main{
  flex:1;
  padding-top:10rpx; 
  padding-bottom: 20rpx;
  box-sizing: border-box;
}
.product-add .bar-box {
  text-align: center;
  background: #fff;
  display: flex;
  align-items: center;
  height: 120rpx;
  width:100%;
justify-content: center;
}
.product-add .bar-box .item{
  flex:1;
  font-size: 28rpx;
  height:100%;
  vertical-align: middle;
   line-height: 120rpx;
}
.product-add .bar-box .item:first-child{
  border-right: 1rpx solid #ddd;
  
}
.m-t-10{
  margin-top: 10rpx;
}
.medias{
  display: flex;
  flex-wrap: wrap;
}
.media-item{
  flex:10 10 50%;
  position:relative;
}
.media-item .icon-close{
  position: absolute;
  top:10rpx;
  right:10rpx;
  width:50rpx;
  height:50rpx;
}
.view-avatar{
   position:relative;
}
.view-avatar .icon-close{
  position: absolute;
  top:10rpx;
  right:10rpx;
  width:50rpx;
  height:50rpx;
}