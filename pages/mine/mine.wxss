  padding:0px;
  content:" ";
    border: 0!important;
  border-radius:0!important; 
}
.mine-customer-service-title {
    font-size: 32rpx;
    color: #222; 
}
.tel-num{
  color:#bbb;
  font-size: 26rpx;
}
