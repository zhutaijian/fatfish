}

.confirm-order-page {
  background: #f5f5f5;
  height: 100%;
}

.section {
  background: #fff;
  margin: 20rpx 0;
  padding: 20rpx;
}
.section .title{
  color:#bbb;
  font-size: 28rpx;
}

.price-box {
  text-align: center;
  background: #fff;
  display: flex;
  align-items: center;
  height: 120rpx;
}

.price-desc {
  flex: 1;
  text-align: left;
  padding-left: 40rpx;
  font-size: 28rpx;
}

.price-desc  text{
  font-size: 34rpx;
  color:#e4393c;
}
.price-tag{
  color:#e4393c;
  font-size: 24rpx!important;
}
.weixin-pay-button {
  font-size: 28rpx;
  color: #ffd600;
}

.product {
  display: flex;
}

.product {
  /* display: flex; */
  background: #fff;
  padding: 10rpx;
  padding-left: 0;
  align-items:flex-start;
}

.product .product-avatar {
  width: 90rpx;
  height: 90rpx;
  display: block;
}

.product .product-info {
  flex: 1;
  vertical-align:top;
  margin-left: 20rpx;
}

.product .product-info .product-title {
  color: #333;
  font-size: 26rpx;
  display: block
}
.product-info .product-count{
  font-size: 24rpx;
  margin-left: 20rpx;
  display: inline-block;
}
.product-info .product-price {
  color: #e4393c;
  margin-right: 10rpx;
  font-size: 24rpx;
}

.product-info .sub-info {
  margin-top: 10rpx;
}

.weixin-pay-button {
  background: #ffd600;
  border: 0;
  font-size: 32rpx;
  display: block;
  height: 120rpx;
  line-height: 120rpx;
  color: #333;
  width: 180rpx;
  font-weight: 600;
}

