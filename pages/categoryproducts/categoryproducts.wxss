/* pages/categoryproducts/categoryproducts.wxss */

page {
    height: 100%;
    overflow: hidden;
}

.category-product-list-box {
    height: 100%;
    overflow: hidden;
   display: flex;
   flex-direction: column;
   
}

.category-products {
    display: flex;
    height: 100%;
    border-top: 1rpx solid #ddd;
    flex:1;
    padding-bottom: 120rpx;
}

.category-product-list-box .category-list {
    width: 200rpx;
    overflow: hidden;
    background: #f6f6f6;
}

.category-list .category-item {
    padding: 10rpx 0;
    font-size: 26rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    /* border-bottom: 1rpx solid #ddd; */
    color: #444;
    position: relative;
    max-width: 200rpx;
    overflow: hidden;
    text-overflow: ellipsis;
}

.category-list .category-item.active_true {
    background: #fff !important;
    font-size: 28rpx !important;
    font-weight: bold;
}

.category-list .category-item.active_true::before {
    position: absolute !important;
    height: 50%;
    left: 0;
    content: "";
    top: 10px;
    width: 10rpx;
    background: #666 !important;
}
.limit-product-avatar{
  width:60rpx;
  height:60rpx;
  position: absolute;
  right:20rpx;

}
.products {
    flex: 1;
}

.products .product-item {
   margin:15px 5px;
}

.product-tag{
  display: inline-block;
  border:1px solid #d95a28;
  padding: 0 5px;
  border-radius: 10px;
  font-size: 22rpx;
  font-weight: 400;
  color:#ff3800;
  margin-right:5px;
}
.feature{
  color:#666;
  border:1px solid #666;
}
.products .product-item {
    display: flex;
    position: relative;
}

.products .prodcut-avatar {
    height: 150rpx;
    width: 150rpx;
    margin-right: 20rpx;
}
.product-desc{
  width: auto;
  height: auto;
  min-height: 40rpx;
}

.prodcut-avatar-2 {
    height: 150rpx;
    width: 150rpx;
    margin-right: 20rpx;
    position: absolute;
}

.product-item .product-info {
    flex: 1;
}

.product-item .product-info .product-title {
    font-size: 32rpx;
    font-weight: 600;
    position: relative;
    overflow: hidden;
    width: 300rpx;
    text-overflow:ellipsis;
    white-space: nowrap;
}
.product-sm{
  display: inline-block;
  font-size: 24rpx;
}

.product-info .product-price {
    color: #ff3800;
    padding-top: 5px;
    font-size: 30rpx;
}

.product-count {
    float: right;
    padding-right: 20rpx;
    position: relative;
}

.bottom-logo {
   width:200rpx;
height:200rpx;

    background-size: contain;
    display: block;
    margin: 0 auto;
    padding: 30rpx 0;
}
.box_tj .c{
  border:4rpx solid #ff3800;
      border-radius: 4rpx;
}
.cheap-price-tag{
  width:50rpx;
 background-size: 100%;
  height:40rpx;
  position: absolute;
  top:0;
  left: 0;
}
.limit-info{
  font-size: 24rpx;
  color: #ddd;
  display: block;
  float:right;

}
 .animate-text{
  position:fixed;
  width: 20rpx;
  height:20rpx;
  border-radius: 50%;
  background-color: #ffd600;
  text-align: center;
  border:2rpx solid #666;
  opacity: .8;
  z-index:3;

}