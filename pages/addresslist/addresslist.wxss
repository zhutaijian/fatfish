/* pages/addresslist/addresslist.wxss */
page{
  height:100%;
  background: #f9f9f9;
  overflow: hidden;
}
.address-list-box{
  height:100%;
  display: flex;
  flex-direction: column;
}
.address-list-box .main{
  flex:1;
}
.main .address-item{
  background: #fff;
  padding: 20rpx;
  position: relative;
  font-size: 28rpx;
  margin-bottom: 20rpx;
    box-shadow: 0rpx 1rpx 0rpx #eee;
    width: 100%;
}
.address-list{
  overflow: hidden;
}
.address-item .address-info{
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
  font-size: 32rpx;
  color:#333;
  
}
.address-item .tag{
  display: inline-block;
   border: 1rpx solid #26a2ff;
  background: #fff;
  height: 30rpx;
  width:50rpx;
  margin-right: 10rpx;
  line-height: 30rpx;
  text-align: center;
  border-radius:10rpx; 
  color:#26a2ff;
  font-size: 24rpx;
}
.address-item image{
  width:40rpx!important;
   height:40rpx!important;
   position: absolute;
   right:60rpx;
   top:50%;
   margin-top: -25rpx;
   padding:10rpx;
}
.address-item .user-info{
  color: #bbb;
}
.address-item .user-info .name{
  display: inline-block;
  margin-right: 10rpx;
  color: #666;
  font-size: 30rpx;
}
.no-address-box{
  font-size: 32rpx;
  text-align: center;
  width:100%;
  color:#666;
  margin-top: 30%;
}
 .no-address-box image{
   width:180rpx;
   height:180rpx;
   margin-bottom: 10rpx;
 }
.no-address-box .lg{
    font-size: 34rpx;
    margin-bottom: 10rpx;
}
.no-address-box .small{
  font-size: 24rpx;
}
.address-list-box .add-address-btn{
  height:100rpx;
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: center;
  width:100%;
  box-shadow: 0rpx -2rpx 0rpx #eee;
  font-size: 30rpx;
  color:#26a2ff;
  background: #fff;
}
.address-list-box .add-address-btn image{
  width:35rpx;
  height:35rpx;
  margin-right: 20rpx;
}

.delete-btn {
  background: #fc464a;
  color: #fff;
  height: 100%;
  position: absolute;
  right: -25%;
  width: 25%;
  top: 0;
  font-size: 28rpx;
  text-align: center;
  vertical-align: middle;
  line-height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100000;
}

.address-item.delete-status {
  transform: translate(-25%, 0);
}

